<%= bootstrap_form_tag url: '/filtrar' do |f| %>

    <div class="form-group">
      <div class="col-sm-12 text-right" style="padding-bottom: 5px">
        <%= link_to new_equipe_path, title: 'Novo', class: 'btn btn-success btn-circle btn-xs' do %>
            <%= fa_icon 'plus' %>
        <% end %>
      </div>
      <div class="col-sm-12">
        <table class="table table-hover table-bordered">
          <thead>
          <tr>
            <th>Descrição </th>
            <th>Rede</th>
            <th>Igreja</th>
            <th>Resposável</th>
            <th width="20"></th>
            <th width="20"></th>
          </tr>
          </thead>

          <tbody>
          <% @equipes.each do |equipe| %>
              <tr>                
                <td><%= equipe.descricao %></td>
                <td><%= equipe.rede %></td>
                <td><%= equipe.rede.igreja.descricao %></td>
                <td><%= equipe.responsavel.pessoa.nome %></td>
                <td>
                  <%= link_to equipe, title: 'Visualizar', class: 'btn btn-default btn-xs icon-only' do %>
                      <%= fa_icon 'search' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_equipe_path(equipe), title: 'Editar', class: 'btn btn-default btn-xs icon-only' do %>
                      <%= fa_icon 'pencil' %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

<% end %>
